{
	"name": "Simple Inbox Status for Outlook.com",
	"short_name": "ET Support",
	"version": "1.0.2",
	"manifest_version": 2,
	"description": "Displays the unread message count for Outlook.com accounts.",
	"homepage_url": "https://github.com/lots0logs/simple-inbox-status",
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"background": {
		"persistent": true,
		"scripts": [
			"src/lib/jwt-decode.min.js",
			"src/background.js"
		]
	},
	"browser_action": {
		"default_title": "Simple Inbox Status",
		"default_icon": "icons/icon16.png",
		"default_popup": ""
	},
	"permissions": [
		"alarms",
		"tabs",
		"webRequest",
		"webRequestBlocking",
		"storage",
		"identity",
		"https://login.microsoftonline.com/*",
		"https://graph.microsoft.com/v2.0/*",
		"https://outlook.office.com/api/v2.0/*"
	],
	"oauth2": {
		"client_id": "48582e3b-c453-4be4-9f7b-8a512fe86a60",
		"scopes": [
			"openid",
			"profile",
			"https://outlook.office.com/mail.read"
		],
		"auth_url": "https://login.microsoftonline.com/common/oauth2/v2.0/authorize?",
		"api_endpoint": "https://outlook.office.com/api/v2.0"
	},
	"web_accessible_resources": [
		"src/lib/*.js",
		"src/*.js"
	],
	"key": ""
}
